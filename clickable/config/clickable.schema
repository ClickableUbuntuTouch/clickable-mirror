{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://clickable-ut.dev/clickable.schema",
  "title": "clickable.json",
  "description": "The Clickable configuration file",
  "type": "object",
  "properties": {
    "clickable_minimum_required": {
      "type": "string",
      "pattern": "^\\d+(\\.\\d+)*$"
    },
    "restrict_arch": {
      "type": "string",
      "enum": [
        "armhf",
        "arm64",
        "amd64",
        "all"
      ]
    },
    "arch": {
      "type": "string",
      "enum": [
        "armhf",
        "arm64",
        "amd64",
        "all"
      ]
    },
    "builder": {
      "type": "string",
      "enum": [
        "pure-qml-qmake",
        "qmake",
        "pure-qml-cmake",
        "cmake",
        "custom",
        "cordova",
        "pure",
        "python",
        "go",
        "rust",
        "precompiled"
      ]
    },
    "template": {
      "type": "string",
      "enum": [
        "pure-qml-qmake",
        "qmake",
        "pure-qml-cmake",
        "cmake",
        "custom",
        "cordova",
        "pure",
        "python",
        "go",
        "rust",
        "precompiled",
        ""
      ]
    },
    "prebuild": {"type": "string"},
    "build": {"type": "string"},
    "postbuild": {"type": "string"},
    "postmake": {"type": "string"},
    "launch": {"type": "string"},
    "build_dir": {"type": "string"},
    "src_dir": {"type": "string"},
    "install_dir": {"type": "string"},
    "root_dir": {"type": "string"},
    "kill": {"type": "string"},
    "scripts": {
      "type": "object",
      "additionalProperties": { "type": "string"}
    },
    "default": {
      "type": ["string","array"],
      "items": {"type": "string"}
    },
    "dependencies_host": {
      "type": ["string","array"],
      "items": {"type": "string"}
    },
    "dependencies_build": {
      "type": ["string","array"],
      "items": {"type": "string"}
    },
    "dependencies_target": {
      "type": ["string","array"],
      "items": {"type": "string"}
    },
    "dependencies_ppa": {
      "type": ["string","array"],
      "items": {"type": "string"}
    },
    "install_lib": {
      "type": ["string","array"],
      "items": {"type": "string"}
    },
    "install_bin": {
      "type": ["string","array"],
      "items": {"type": "string"}
    },
    "install_qml": {
      "type": ["string","array"],
      "items": {"type": "string"}
    },
    "install_data": {
      "type": "object",
      "additionalProperties": { "type": "string"}
    },
    "docker_image": {"type": "string"},
    "ignore": {
      "type": ["string","array"],
      "items": {"type": "string"}
    },
    "gopath": {"type": "string"},
    "cargo_home": {"type": "string"},
    "build_args": {
      "type": ["string","array"],
      "items": {"type": "string"}
    },
    "env_vars": {
      "type": "object",
      "additionalProperties": { "type": "string"}
    },
    "make_args": {
      "type": ["string","array"],
      "items": {"type": "string"}
    },
    "make_jobs": {
      "type": "integer",
      "minimum": 1
    },
    "dirty": {"type": "boolean"},
    "test": {"type": "string"},
    "image_setup": {
      "type": ["object"],
      "properties": {
        "run": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "libraries": {
      "type": ["object"],
      "additionalProperties": {
        "type": "object",
        "properties": {
          "prebuild": {"type": "string"},
          "build": {"type": "string"},
          "postbuild": {"type": "string"},
          "postmake": {"type": "string"},
          "build_args": {
            "type": ["string","array"],
            "items": {"type": "string"}
          },
          "env_vars": {
            "type": "object",
            "additionalProperties": { "type": "string"}
          },
          "make_args": {
            "type": ["string","array"],
            "items": {"type": "string"}
          },
          "make_jobs": {
            "type": "integer",
            "minimum": 1
          },
          "docker_image": {"type": "string"},
          "dependencies_build": {
            "type": ["string","array"],
            "items": {"type": "string"}
          },
          "dependencies_host": {
            "type": ["string","array"],
            "items": {"type": "string"}
          },
          "dependencies_target": {
            "type": ["string","array"],
            "items": {"type": "string"}
          },
          "dependencies_ppa": {
            "type": ["string","array"],
            "items": {"type": "string"}
          },
          "builder": {
            "type": "string",
            "enum":  [
              "cmake",
              "qmake",
              "custom"
            ]
          },
          "template": {
            "type": "string",
            "enum":  [
              "cmake",
              "qmake",
              "custom"
            ]
          },
          "build_dir": {"type": "string"},
          "src_dir": {"type": "string"},
          "install_dir": {"type": "string"},
          "image_setup": {
            "type": ["object"],
            "properties": {
              "run": {
                "type": "array",
                "items": {"type": "string"}
              }
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
